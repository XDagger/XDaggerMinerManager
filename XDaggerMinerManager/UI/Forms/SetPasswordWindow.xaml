<Window x:Name="passwordWindow" x:Class="XDaggerMinerManager.UI.Forms.SetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XDaggerMinerManager.UI.Forms"
        mc:Ignorable="d"
        Title="设置锁屏密码" Height="166.667" Width="350" WindowStartupLocation="CenterOwner" Icon="/XDaggerMinerManager;component/Resources/XDagger.ico" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" Closing="passwordWindow_Closing">
