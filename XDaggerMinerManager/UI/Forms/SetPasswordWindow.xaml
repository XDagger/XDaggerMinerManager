        <Label Content="输入密码：" HorizontalAlignment="Left" Margin="20,20,0,0" Height="24 " VerticalAlignment="Top" Width="73"/>
        <PasswordBox x:Name="tBxConfirmPassword" HorizontalAlignment="Left" Margin="98,58,0,0" VerticalAlignment="Top" Width="221" Height="24" PasswordChanged="tBxConfirmPassword_PasswordChanged"/>
        <Label Content="确认密码：" HorizontalAlignment="Left" Margin="20,58,0,0" Height="24 " VerticalAlignment="Top" Width="73"/>
        <Label x:Name="lblErrorMessage" Content=" " HorizontalAlignment="Left" Margin="20,98,0,0" VerticalAlignment="Top" Width="205" Foreground="#FFE91515" FontSize="10"/>

    </Grid>
</Window>
